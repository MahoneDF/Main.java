<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../../CSS/style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ProfileMenu">

    <center>
        <VBox alignment="CENTER" prefHeight="600.0" prefWidth="206.0" spacing="20">
            <HBox alignment="CENTER" spacing="10">
                <Button alignment="CENTER" styleClass="rich-blue" text="Change username" textAlignment="CENTER" onMouseClicked="#goToChangeUsernameScene"/>
                <Button alignment="CENTER" prefWidth="161.0" styleClass="rich-blue" text="Change password" onMouseClicked="#goToChangePasswordScene"/>
                <Button alignment="CENTER" prefWidth="161.0" styleClass="rich-blue" text="Change avatar" onMouseClicked="#goToChangeAvatarScene"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Button alignment="CENTER" prefHeight="38.0" prefWidth="159.0" styleClass="rich-blue" text="Logout" onMouseClicked="#logout"/>
                <Button alignment="CENTER" styleClass="rich-blue" text="Remove Account" onMouseClicked="#removeAccount"/>
            </HBox>
            <Button alignment="CENTER" styleClass="rich-blue" text="Back" onMouseClicked="#backToMainMenu"/>
        </VBox>
    </center>

    <bottom>
        <Label text="Powered by MDF" alignment="BOTTOM_LEFT" id="footer"/>
    </bottom>

</BorderPane>
